<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <fuel.hunter.view.shadow.ShadowView
            android:id="@+id/shadow"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:cornerRadius="@dimen/listItemRadius"
            app:shadowRadius="@dimen/listItemShadowRadius"
            app:shadowColor="@color/itemShadow"
            app:shadowAlpha="102"
            app:style="middle"/>

    <include android:id="@+id/content"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintLeft_toLeftOf="parent"
             app:layout_constraintRight_toRightOf="parent"
             android:layout_marginStart="@dimen/listItemMargin"
             android:layout_marginTop="@dimen/listItemRadius"
             android:layout_marginEnd="@dimen/listItemMargin"
             android:layout_marginBottom="@dimen/listItemRadius"
             layout="@layout/layout_price_item_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>